<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<div>
    <div class="card-group">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quality</th>
                    <th scope="col">Image</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                <tr class="bg-light">
                    <form action="Fruit/Create" method="post" class="m-0 p-0">
                        <td>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Name" name="Name" required>
                            </div>
                        </td>
                        <td>
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="Price" name="Price" required min="1">
                            </div>
                        </td>
                        <td>
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="Quality" name="Quality" required min="1" max="2">
                            </div>
                        </td>
                        <td>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Image path" name="ImagePath" required>
                            </div>
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm" type="submit">Create</button>
                        </td>
                    </form>
                </tr>
                @foreach (Fruit fruit in Model)
                {
                    <tr data-id="@fruit.Id">
                        <form action="Fruit/Delete" method="post" class="m-0 p-0">
                            <td>
                                @fruit.Name
                            </td>
                            <td>
                                @fruit.Price
                            </td>
                            <td>
                                @fruit.Quality
                            </td>
                            <td>
                                @fruit.ImagePath
                            </td>
                            <td>
                                <!-- Edit / delete buttons -->
                                <input type="hidden" value="@fruit.Id" name="id">
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button" class="btn btn-outline-primary edit-fruit" data-id="@fruit.Id">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </div>
                            </td>
                        </form>
                    </tr>
                    <tr data-id="@fruit.Id" class="d-none">
                        <form action="Fruit/Edit" method="post" class="m-0 p-0">
                            <td>
                                <div class="input-group">
                                    <input type="text" value="@fruit.Name" class="form-control"name="Name" required>
                                </div>
                            </td>
                            <td>
                                <div class="input-group">
                                    <input type="number" value="@fruit.Price" class="form-control" name="Price" required min="1">
                                </div>
                            </td>
                            <td>
                                <div class="input-group">
                                    <input type="number" value="@fruit.Quality" class="form-control" name="Quality" required min="1" max="2">
                                </div>
                            </td>
                            <td>
                                <div class="input-group">
                                    <input type="text" value="@fruit.ImagePath" class="form-control" name="ImagePath" required>
                                </div>
                            </td>
                            <td>
                                <input type="hidden" name="Id" value="@fruit.Id">
                                <!-- Accept / cancel editing buttons -->
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-primary cancel-edit-fruit" data-id="@fruit.Id">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </td>
                        </form>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>